# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=tu_password
DB_NAME=taller_mecanico

# ========================================
# CONFIGURACIÓN JWT
# ========================================
JWT_SECRET=tu_jwt_secret_super_seguro

# ========================================
# CONFIGURACIÓN DE LA EMPRESA
# ========================================
EMPRESA_NOMBRE=Tecno Auto - Repuestos Electrofrio
EMPRESA_TELEFONO=+502 5555-1234
EMPRESA_EMAIL=info@tecnoauto.com
EMPRESA_DIRECCION=Zona 1, Ciudad de Guatemala
EMPRESA_LOGO=/LogoElectrofrio.jpg

# ========================================
# CONFIGURACIÓN DE EMAIL
# ========================================
# Habilitar/deshabilitar servicio de email
EMAIL_ENABLED=true

# Configuración para Gmail (recomendado)
EMAIL_SERVICE=gmail
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_contraseña_de_aplicacion

# Configuración para Outlook/Hotmail
# EMAIL_SERVICE=outlook
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=tu_email@outlook.com
# EMAIL_PASS=tu_contraseña

# Configuración para servidor propio
# EMAIL_SERVICE=custom
# EMAIL_HOST=smtp.tuservidor.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=tu_email@tuservidor.com
# EMAIL_PASS=tu_contraseña

# Email remitente (opcional, por defecto usa EMAIL_USER)
EMAIL_FROM=notificaciones@tecnoauto.com

# ========================================
# CONFIGURACIÓN DE WHATSAPP
# ========================================
# Habilitar/deshabilitar servicio de WhatsApp
WHATSAPP_ENABLED=true

# Ruta donde se guardarán las sesiones de WhatsApp
WHATSAPP_SESSION_PATH=./whatsapp-session

# ID único del cliente (no cambiar una vez configurado)
WHATSAPP_CLIENT_ID=taller-mecanico

# ========================================
# CONFIGURACIÓN DE PDF
# ========================================
# Habilitar/deshabilitar generación de PDF
PDF_ENABLED=true

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================
# Habilitar/deshabilitar logging detallado
LOGGING_ENABLED=true

# Nivel de logging (debug, info, warn, error)
LOG_LEVEL=info

# Archivo de log (opcional)
LOG_FILE=./logs/notifications.log

# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
PORT=4000

# ========================================
# INSTRUCCIONES DE CONFIGURACIÓN
# ========================================

# 1. COPIA ESTE ARCHIVO COMO .env:
#    cp env.example .env

# 2. CONFIGURA TU BASE DE DATOS:
#    - DB_HOST: Host de tu base de datos MySQL
#    - DB_USER: Usuario de la base de datos
#    - DB_PASSWORD: Contraseña de la base de datos
#    - DB_NAME: Nombre de la base de datos

# 3. CONFIGURA EMAIL (Gmail recomendado):
#    - Ve a tu cuenta de Gmail
#    - Activa la verificación en dos pasos
#    - Genera una contraseña de aplicación
#    - Usa esa contraseña en EMAIL_PASS

# 4. CONFIGURA WHATSAPP:
#    - La primera vez que ejecutes el servidor, se generará un código QR
#    - Escanea el código con tu WhatsApp móvil
#    - La sesión se guardará automáticamente

# 5. PERSONALIZA LA INFORMACIÓN DE LA EMPRESA:
#    - Actualiza el nombre, teléfono, email y dirección
#    - Los templates se actualizarán automáticamente

# ========================================
# NOTAS IMPORTANTES
# ========================================

# - Nunca subas el archivo .env a Git
# - Mantén tus credenciales seguras
# - Para Gmail, usa contraseñas de aplicación, no tu contraseña normal
# - WhatsApp requiere una sesión activa, escanea el QR cuando se solicite
# - Los logs te ayudarán a debuggear problemas
